{
    "nodes": [
        {
            "id": "router",
            "type": "router",
            "ip": "192.168.1.1",
            "interfaces": [
                {
                    "name": "eth0",
                    "ip": "192.168.1.1",
                    "subnet": "192.168.1.0/24",
                    "connectedTo": "switch1"
                },
                {
                    "name": "eth1",
                    "ip": "192.168.2.1",
                    "subnet": "192.168.2.0/24",
                    "connectedTo": "switch2"
                }
            ],
            "routing": {
                "static": [],
                "dynamic": {
                    "protocols": [
                        "OSPF",
                        "BGP"
                    ]
                }
            }
        },
        {
            "id": "switch1",
            "type": "switch",
            "ip": "192.168.1.2",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "router"
                },
                {
                    "name": "eth1",
                    "connectedTo": "linux_vm1"
                },
                {
                    "name": "eth2",
                    "connectedTo": "windows_vm1"
                }
            ]
        },
        {
            "id": "switch2",
            "type": "switch",
            "ip": "192.168.2.2",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "router"
                },
                {
                    "name": "eth1",
                    "connectedTo": "linux_vm2"
                },
                {
                    "name": "eth2",
                    "connectedTo": "windows_vm2"
                }
            ]
        },
        {
            "id": "linux_vm1",
            "type": "virtual_machine",
            "os": "linux",
            "ip": "192.168.1.10",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "switch1"
                }
            ],
            "applications": [
                {
                    "name": "web_server",
                    "port": 80
                },
                {
                    "name": "ssh_server",
                    "port": 22
                }
            ]
        },
        {
            "id": "windows_vm1",
            "type": "virtual_machine",
            "os": "windows",
            "ip": "192.168.1.11",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "switch1"
                }
            ],
            "applications": [
                {
                    "name": "file_server",
                    "port": 445
                },
                {
                    "name": "rdp_server",
                    "port": 3389
                }
            ]
        },
        {
            "id": "linux_vm2",
            "type": "virtual_machine",
            "os": "linux",
            "ip": "192.168.2.10",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "switch2"
                }
            ],
            "applications": [
                {
                    "name": "web_server",
                    "port": 80
                },
                {
                    "name": "ssh_server",
                    "port": 22
                }
            ]
        },
        {
            "id": "windows_vm2",
            "type": "virtual_machine",
            "os": "windows",
            "ip": "192.168.2.11",
            "interfaces": [
                {
                    "name": "eth0",
                    "connectedTo": "switch2"
                }
            ],
            "applications": [
                {
                    "name": "file_server",
                    "port": 445
                },
                {
                    "name": "rdp_server",
                    "port": 3389
                }
            ]
        }
    ]
}